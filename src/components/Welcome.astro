---
import background from '../assets/background.svg';

const services = [
	{
		title: 'Fractional CISO',
		description: 'Expert cybersecurity leadership on demand. Get C-level security guidance without the full-time commitment.',
		icon: 'shield',
		features: ['Risk Assessment', 'Security Strategy', 'Compliance Oversight', 'Incident Response']
	},
	{
		title: 'Data Privacy',
		description: 'Navigate complex privacy regulations with confidence. GDPR, CCPA, and beyond.',
		icon: 'lock',
		features: ['Privacy Audits', 'Policy Development', 'Training & Awareness', 'Vendor Management']
	},
	{
		title: 'Cloud Consulting',
		description: 'Optimize your cloud infrastructure for security, performance, and cost-efficiency.',
		icon: 'cloud',
		features: ['Cloud Architecture', 'Migration Strategy', 'Security Hardening', 'Cost Optimization']
	}
];
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<main>
		<section id="hero">
			<h1>Enterprise Security & Cloud Solutions</h1>
			<p class="hero-subtitle">Empowering organizations with expert cybersecurity leadership and cloud excellence</p>
			<div id="cta-buttons">
				<a class="button primary" href="#contact">Get Started</a>
				<a class="button secondary" href="#services">Learn More</a>
			</div>
		</section>

		<section id="services">
			<h2 class="section-title">Our Services</h2>
			<div class="services-grid">
				{services.map((service) => (
					<div class="service-card">
						<div class="service-icon">
							{service.icon === 'shield' && (
								<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
								</svg>
							)}
							{service.icon === 'lock' && (
								<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
									<path d="M7 11V7a5 5 0 0 1 10 0v4"/>
								</svg>
							)}
							{service.icon === 'cloud' && (
								<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"/>
								</svg>
							)}
						</div>
						<h3>{service.title}</h3>
						<p class="service-description">{service.description}</p>
						<ul class="service-features">
							{service.features.map((feature) => (
								<li>
									<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
										<polyline points="20 6 9 17 4 12"/>
									</svg>
									{feature}
								</li>
							))}
						</ul>
					</div>
				))}
			</div>
		</section>
	</main>
</div>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
		opacity: 0.6;
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		min-height: 100vh;
		padding-bottom: 4rem;
	}

	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	#hero {
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: center;
		text-align: center;
		min-height: 60vh;
		padding: 4rem 0;
	}

	h1 {
		font-size: 3.5rem;
		font-weight: 700;
		margin: 0 0 1rem;
		color: #111827;
		line-height: 1.2;
	}

	.hero-subtitle {
		font-size: 1.25rem;
		color: #6b7280;
		margin: 0 0 2.5rem;
		max-width: 600px;
		line-height: 1.6;
	}

	#cta-buttons {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
		justify-content: center;
	}

	.button {
		display: inline-flex;
		align-items: center;
		padding: 0.875rem 2rem;
		text-decoration: none;
		font-weight: 600;
		font-size: 1rem;
		border-radius: 8px;
		transition: all 0.2s ease;
	}

	.button.primary {
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		color: white;
		box-shadow:
			0 4px 12px rgba(50, 69, 255, 0.2),
			inset 0 0 0 1px rgba(255, 255, 255, 0.12);
	}

	.button.primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(50, 69, 255, 0.3);
	}

	.button.secondary {
		background: white;
		color: #111827;
		border: 2px solid #e5e7eb;
	}

	.button.secondary:hover {
		border-color: #3245ff;
		color: #3245ff;
		transform: translateY(-2px);
	}

	#services {
		padding: 4rem 0;
	}

	.section-title {
		font-size: 2.5rem;
		font-weight: 700;
		text-align: center;
		margin: 0 0 3rem;
		color: #111827;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 2rem;
		margin-top: 3rem;
	}

	.service-card {
		background: white;
		border-radius: 16px;
		padding: 2.5rem;
		border: 1px solid #e5e7eb;
		transition: all 0.3s ease;
		display: flex;
		flex-direction: column;
	}

	.service-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
		border-color: #3245ff;
	}

	.service-icon {
		width: 64px;
		height: 64px;
		background: linear-gradient(135deg, #3245ff 0%, #bc52ee 100%);
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 1.5rem;
		color: white;
	}

	.service-card h3 {
		font-size: 1.5rem;
		font-weight: 700;
		color: #111827;
		margin: 0 0 1rem;
	}

	.service-description {
		color: #6b7280;
		font-size: 1rem;
		line-height: 1.6;
		margin: 0 0 1.5rem;
		flex-grow: 1;
	}

	.service-features {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.service-features li {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.5rem 0;
		color: #374151;
		font-size: 0.95rem;
	}

	.service-features li svg {
		color: #10b981;
		flex-shrink: 0;
	}

	@media screen and (max-width: 768px) {
		h1 {
			font-size: 2.25rem;
			line-height: 1.3;
		}

		.hero-subtitle {
			font-size: 1.1rem;
		}

		#hero {
			min-height: 50vh;
			padding: 3rem 0;
		}

		#cta-buttons {
			flex-direction: column;
			width: 100%;
			max-width: 300px;
		}

		.button {
			width: 100%;
			justify-content: center;
		}

		.services-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.service-card {
			padding: 2rem;
		}

		.section-title {
			font-size: 2rem;
		}
	}

	@media screen and (min-width: 769px) and (max-width: 1024px) {
		.services-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}
</style>
